

apiVersion: build.openshift.io/v1
kind: BuildConfig
metadata:
  name: pear
  labels:
    app: pear
spec:
  source:
    type: Git
    git:
      uri: https://github.com/jmp929/pear/tree/sam/
    contextDir: frontend
  strategy:
    type: Docker                      
    dockerStrategy:
      dockerfilePath: Dockerfile    # Look for Dockerfile in: gitUri/contextDir/dockerfilePath
  output:
    to:
      kind: ImageStreamTag
      name: pear:latest

